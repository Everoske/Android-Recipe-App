<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addRecipeItemFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddRecipeItemFragment">

    <EditText
        android:id="@+id/addRecipeItemEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/enterInformationText"
        android:inputType="textCapSentences|textMultiLine"
        android:gravity="start"
        android:lines="3"
        android:maxLines="10"
        android:importantForAutofill="no" />
    
    <ImageButton
        android:id="@+id/addRecipeItemImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:layout_constraintTop_toBottomOf="@id/addRecipeItemEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_save_24"
        android:background="@android:color/transparent"
        android:contentDescription="@string/saveItem"/>

</androidx.constraintlayout.widget.ConstraintLayout>